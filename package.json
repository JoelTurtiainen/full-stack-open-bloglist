{
  "name": "@JoelTurtiainen/bloglist",
  "author": "Joel Turtiainen",
  "private": true,
  "version": "0.1.0",
  "main": "index.js",
  "scripts": {
    "back:dev": "npm run dev --prefix back",
    "front:dev": "npm run dev --prefix front",
    "back:start": "npm run start --prefix back",
    "front:start": "npm run serve --prefix front",
    "dev": "concurrently --names 'BACK,FRONT' -c 'yellow,blue' 'npm run back:dev' 'npm run front:dev'",
    "start": "concurrently --names 'BACK,FRONT' -c 'yellow,blue' 'npm run back:start' 'npm run front:start'",
    "build": "npm run build --prefix front",
    "lint": "npm run lint -ws"
  },
  "workspaces": [
    "back",
    "front"
  ],
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
